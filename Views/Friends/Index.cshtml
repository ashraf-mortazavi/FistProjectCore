@model  IEnumerable<FistProjectCore.Models.Friend>
@{
    ViewData["Title"] = "Index";
}

<h1> Friend List </h1>
<p style="text-align:right;margin-right:20px;">
    <a class="btn btn-outline-primary" asp-action="EditOrAdd">Create New</a>
</p>
<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PhoneNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model =>model.Picture)
                </th>
                <th></th>
                <th> Edit Action</th>
                <th> Detail Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelitem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelitem => item.PhoneNumber)
                    </td>
                    <td>
                        <img src="@item.Picture" alt="Image" />
                    </td>
                   <td class="text-center">
                    <a asp-action="EditOrAdd" class="btn btn-outline-primary"  asp-route-Id ="@item.Id">Edit</a>
                   </td>
                   <td class="text-center">
                    <a asp-action="Detail" class="btn btn-outline-info"  asp-route-Id="@item.Id">Details</a>
                   </td>            
                </tr>
            }
        </tbody>
    </table>
</div>
