@model  IEnumerable<PhoneBook.Models.PhoneBooks>
@{
    ViewData["Title"] = "Index";
}

<h1> PhoneBookList </h1>
<p style="text-align:right;margin-right:20px;">
    <a class="btn btn-outline-primary" asp-action="EditOrAdd">Create New</a>
</p>
<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th >
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th >
                    @Html.DisplayNameFor(model => model.PhoneNumber)
                </th>
                <th > Edit Action </th>
                <th > Detail Action</th>
                <th > Delete Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelitem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelitem => item.PhoneNumber)
                    </td>
                    
                   <td class="text-center">
                    <a asp-action="EditOrAdd" class="btn btn-outline-info"  asp-route-Id ="@item.Id" asp-route-Name="@item.Name" asp-route-PhoneNumber="@item.PhoneNumber">Edit</a>
                   </td>
                   <td class="text-center">
                    <a asp-action="Detail" class="btn btn-outline-info"  asp-route-Id="@item.Id" asp-route-Name = "@item.Name" asp-route-PhoneNumber="@item.PhoneNumber">Details</a>
                   </td>  
                   <td class="text-center">
                    <a asp-action="Delete" class="btn btn-outline-info" asp-route-Id="@item.Id">Delete</a>
                   </td>          
                </tr>
            }
        </tbody>
    </table>
</div>
